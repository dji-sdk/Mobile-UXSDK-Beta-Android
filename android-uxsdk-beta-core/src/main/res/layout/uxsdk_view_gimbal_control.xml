<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gimbal_control_point"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/uxsdk_ic_gimbal_control_point"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/gimbal_control_move"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/uxsdk_ic_gimbal_control_move"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/gimbal_control_arrow"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/uxsdk_ic_gimbal_control_arrow"
        tools:ignore="ContentDescription" />

</merge>