<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="25dp"
    tools:parentTag="dji.ux.beta.core.widget.flightmode.FlightModeWidget">

    <ImageView
        android:id="@+id/imageview_flight_mode_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="@string/uxsdk_icon_flight_mode_ratio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/uxsdk_ic_topbar_flight_mode"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textview_flight_mode_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="@string/uxsdk_string_default_value"
        android:textColor="@color/uxsdk_white"
        android:textSize="@dimen/uxsdk_text_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageview_flight_mode_icon"
        app:layout_constraintTop_toTopOf="parent" />

</merge>