        android:state_pressed="true"
        android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/uxsdk_list_item_button_corners"/>
            <solid android:color="#882CA5F3"/>

        </shape>
    </item>
    <item
        android:state_pressed="false"
        android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/uxsdk_list_item_button_corners"/>
            <solid android:color="#2CA5F3"/>

        </shape>
    </item>
    <item
        android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/uxsdk_list_item_button_corners"/>
            <solid android:color="@color/uxsdk_white_60_percent"/>
        </shape>
    </item>
</selector>

